{
	"$schema": "https://turbo.build/schema.json",
	"ui": "stream",
	"globalDependencies": ["**/.env"],
	"tasks": {
		"db:generate": {
			"cache": false
		},
		"db:migrate": {
			"cache": false,
			"persistent": false
		},
		"db:deploy": {
			"cache": false
		},
		"build": {
			"dependsOn": ["^build", "^db:generate"],
			"inputs": ["$TURBO_DEFAULT$", ".env"],
			"env": [
				"BETTER_AUTH_SECRET",
				"BETTER_AUTH_URL",
				"DATABASE_URL",
				"GITHUB_CLIENT_ID",
				"GITHUB_CLIENT_SECRET"
			],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"format": {
			"dependsOn": ["^format"]
		},
		"check:types": {
			"dependsOn": ["^check:types"]
		},
		"dev": {
			"dependsOn": ["^db:generate"],
			"cache": false,
			"persistent": true
		}
	}
}
